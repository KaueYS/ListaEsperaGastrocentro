@model LoginModel

@{
    Layout = "_layoutDeslogada";
}

<p>TELA LOGIN</p>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-primary" role="alert">
        @* <button type="button" class="btn-close close-alert" data-bs-dismiss="alert" aria-label="Close"></button> *@
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login" class="form-label"></label>
        <input type="text" asp-for="Login" class="form-control" id="login" placeholder="Login" >
        @Html.ValidationMessageFor(x => x.Login)
        
    </div>

    <div class="mb-3">
        <label for="senha" class="form-label"></label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    
    <button type="submit" class="btn btn-primary">Logar</button>
</form>



